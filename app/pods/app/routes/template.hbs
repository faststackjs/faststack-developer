<div class="breadcrumb sub-nav">
  {{#each model as |route|}}
    {{sub-nav-link link="app.routes.route" id=route.id title=route.name}}
  {{/each}}
  <div class="sub-nav-box">
    <button class="sub-nav-button w-button" {{action 'createRoute'}}>New Route</button>
  </div>
