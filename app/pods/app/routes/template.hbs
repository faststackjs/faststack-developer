{{#if routeForm}}
  {{#pop-up title="New Route" close=(action 'close' routeForm) save=(action 'save' routeForm)}}
    <label for="name">Route Name</label>
    {{input value=routeForm.name class="input w-input" type="text"}}
    {{#if routeForm.id}}
      <div class="w-clearfix">
        <button class="danger panel-item-button w-button" {{action 'delete' routeForm}}>Delete Route</button>
      </div>
    {{/if}}
  {{/pop-up}}
{{/if}}
